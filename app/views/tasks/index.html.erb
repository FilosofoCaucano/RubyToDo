<h1>📝 Lista de Tareas</h1>

<%= link_to "➕ Nueva tarea", new_task_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <%= task.done ? "✅ Completada" : "❌ Pendiente" %>
          <%= button_to (task.done ? "Marcar como pendiente" : "Marcar como completada"), toggle_done_task_path(task), method: :patch, class: "btn btn-sm" %>
        </td>
        <td>
          <%= link_to "✏️ Editar", edit_task_path(task), class: "btn btn-sm" %> |
          <%= link_to "🗑 Eliminar", task_path(task), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>